@model CandidateModel;
@{
    ViewData["Title"] = "Home Page";
}


<div class="container-fluid col-lg-12 p-3 shadow-lg" id="box-container">
    <div class="d-flex align-items-center pt-3">
        <a type="button" class="btn btn-sm btn-floating" id="btn-back" onclick="window.history.back()">
            <i class="bi bi-arrow-left-circle fs-3"></i>
        </a>

        <span id="title" class="ms-4 mt-0 fs-5 mb-5"> Candidate Registration</span>
    </div>



    <div id="register-container" class="register-container ps-4 ">

    </div>

    <div id="error-tag" class="alert alert-danger" hidden></div>

    <button type="" id="btn-add" class="btn btn-primary">Add</button>
    <button type="" id="btn-save" class="btn btn-success">Submit</button>
    <input type="hidden" id="form-index" name="FormIndex" value="0" data-index="0" />

</div>

@section Scripts
{
    <script src="~/js/candidate.js" asp-append-version="true"></script>
}
